citHeader("To cite biomartr in publications please use:")

bibentry(entry = "Article",
  bibtype  = "Manual",
  title        = "Biomartr: genomic data retrieval with R",
  author       = c(as.person("Drost Hajk-Georg"),
                   as.person("Paszkowski Jerzy")),
  journal      = "Bioinformatics",
  year         = "2017",
  url          = "https://doi.org/10.1093/bioinformatics/btw821",
  
  textVersion  =
  paste("Hajk-Georg Drost, Jerzy Paszkowski.",
  "Biomartr: genomic data retrieval with R.",
  "Bioinformatics (2017).",
  "https://doi.org/10.1093/bioinformatics/btw821")
)